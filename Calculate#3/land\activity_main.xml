<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2D"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/secondNum"
        android:layout_width="432dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="#C1BFBF"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textColorHint="#0D0C0C"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNum" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="190dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#CACAC6"
        android:hint="result"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textColor="#0F0E0E"
        android:textColorHint="#0D0C0C"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/firstNum"
        android:layout_width="432dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:background="#B6B4B4"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textColorHint="#101010"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="450dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondNum">

        <Button
            android:id="@+id/bAdd"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#FFC107"
            android:text="+"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bSubtract"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#FFC107"
            android:text="-"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bMultiple"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:text="*"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bDivide"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:text="/"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bMadular"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC107"
            android:text="%"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
